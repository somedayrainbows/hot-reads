<h1>Hot Reads!</h1>
<div class="hot-links">
  <table class='hot-links-table'>
    <thead>
      <th>URL</th>
      <th>Total Reads</th>
    </thead>
    <tbody>
      <% @links.each.with_index do |link, index| %>
        <tr>
          <td>
            <%= index + 1 %>: <%= link.url %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
